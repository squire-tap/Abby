@page
@model AbbyWeb.Pages.Categories.EditModel

<form method="post">
	@*Recebendo o id do objeto a ser editado pela idex page*@
	<input hidden asp-for="Category.Id" />
	@*mt = margin top*@
	<div classs="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Edit Category</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="Category.Name"></label>
			<input asp-for="@Model.Category.Name" class="form-control" />
			<span asp-validation-for="@Model.Category.Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Category.DisplayOrder"></label>
			<input asp-for="@Model.Category.DisplayOrder" class="form-control" />
			<span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px;">Edit</button>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}
